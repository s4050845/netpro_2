    private void enterButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        cookky1.add(urlField1.getText());
        cookky2.add(urlField2.getText());
        if(urlField1 == null && urlField2 == null) return;
        setURL();
        showWeb();
    }                                           

    private void backButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(cookky1 == null && cookky2 == null) return;
        cookky1.remove(cookky1.size()-1);
        cookky2.remove(cookky2.size()-1);
        setURL();
        showWeb();
    }                                          

