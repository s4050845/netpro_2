    private void setURL(){
        try {
            url1 = new URL(cookky1.get(cookky1.size()-1)); 
            url2 = new URL(cookky2.get(cookky2.size()-1));
        } catch (MalformedURLException ex) {
            Logger.getLogger(NetPro2Frame.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
    
    private void showWeb(){
        try {
            treadEditorPane.setText(treadEditorPane.getText()+"Tread-1 get ulr\n");
            treadEditorPane.setText(treadEditorPane.getText()+"Tread-2 get ulr\n");
            treadEditorPane.setText(treadEditorPane.getText()+"Tread-1 open webpage\n");
            webEditorPane1.setPage(url1);
            showHeader(url1);
            treadEditorPane.setText(treadEditorPane.getText()+"Tread-2 open webpage\n");
            webEditorPane2.setPage(url2);
            showHeader(url2);
            treadEditorPane.setText(treadEditorPane.getText()+"Tread-1 Done...\n");
            treadEditorPane.setText(treadEditorPane.getText()+"Tread-2 Done...\n");
        } catch (IOException ex) {
            Logger.getLogger(NetPro2Frame.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
    
    private void showHeader(URL obj){
        try {
	URLConnection conn = obj.openConnection();
	Map<String, List<String>> map = conn.getHeaderFields();
       
        headerEditorPane.setText(headerEditorPane.getText()+"Printing Response Header...\n");
        
	for (Map.Entry<String, List<String>> entry : map.entrySet()) {
            headerEditorPane.setText(headerEditorPane.getText()+"Key : " + entry.getKey() + " ,Value : " + entry.getValue() + "\n");
	}
 
	headerEditorPane.setText(headerEditorPane.getText()+"\nGet Response Header By Key ...\n");
	String server = conn.getHeaderField("Server");
 
	if (server == null) {
		headerEditorPane.setText(headerEditorPane.getText()+"Key 'Server' is not found!");
	} else {
		headerEditorPane.setText(headerEditorPane.getText()+"Server - " + server);
	}
 
	headerEditorPane.setText(headerEditorPane.getText()+"\n Done\n");
 
    } catch (Exception e) {
	e.printStackTrace();
    }
 
    }
